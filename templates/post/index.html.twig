{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Posts</h1>
        <a href="{{ path('post_new') }}" class="btn btn-primary">Add New Post</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        {% for post in posts %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.content|length > 150 ? post.content|slice(0, 150) ~ '...' : post.content }}</p>
                        <div class="mb-2">
                            {% for tag in post.tags %}
                                <span class="badge bg-info text-dark">{{ tag.name }}</span>
                            {% endfor %}
                        </div>
                        <a href="{{ path('post_show', {'slug': post.slug}) }}" class="btn btn-sm btn-outline-primary">Read more</a>

                        <a href="{{ path('post_edit', {'slug': post.slug}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>

                        <form action="{{ path('post_delete', {'slug': post.slug}) }}" method="post" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this post?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete-post-' ~ post.id) }}">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>

                    </div>
                    <div class="card-footer text-muted">
                        Created: {{ post.createdAt|date('Y-m-d H:i') }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <div class="alert alert-warning">No posts found.</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
